<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    <!--
         Load properties but ignore unresolvable properties so that
         they are searched in other property configurers defined in the context
    -->
    <context:property-placeholder location="file:${WON_CONFIG_DIR}/node.properties" ignore-unresolvable="true"/>

    <bean name="wonMessageCamelProcessor" class="won.node.camel.processor.WonMessageCamelProcessor"></bean>
    <bean name="activateNeedMessageProcessor" class="won.node.messaging.processors.ActivateNeedMessageProcessor"></bean>
    <bean name="deactivateNeedMessageProcessor"
          class="won.node.messaging.processors.DeactivateNeedMessageProcessor"></bean>
    <bean name="closeMessageFromOwnerMessageProcessor"
          class="won.node.messaging.processors.CloseMessageFromOwnerProcessor"></bean>
    <bean name="closeMessageFromNodeMessageProcessor"
          class="won.node.messaging.processors.CloseMessageFromNodeProcessor"></bean>
    <bean name="connectMessageFromNodeMessageProcessor"
          class="won.node.messaging.processors.ConnectMessageFromNodeProcessor"></bean>
    <bean name="connectMessageFromOwnerMessageProcessor"
          class="won.node.messaging.processors.ConnectMessageFromOwnerProcessor"></bean>
    <bean name="createNeedMessageProcessor"
          class="won.node.messaging.processors.CreateNeedMessageProcessor"></bean>
    <bean name="openMessageFromNodeMessageProcessor"
          class="won.node.messaging.processors.OpenMessageFromNodeProcessor"></bean>
    <bean name="openMessageFromOwnerMessageProcessor"
          class="won.node.messaging.processors.OpenMessageFromOwnerProcessor"></bean>
    <bean name="sendMessageFromNodeMessageProcessor"
          class="won.node.messaging.processors.SendMessageFromNodeProcessor"></bean>
    <bean name="sendMessageFromOwnerMessageProcessor"
          class="won.node.messaging.processors.SendMessageFromOwnerProcessor"></bean>
    <bean name ="hintMessageProcessor"
          class="won.node.messaging.processors.HintMessageProcessor"></bean>


</beans>