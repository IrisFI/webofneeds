<schema name="interval-testing" version="1.4">

    <uniqueKey>id</uniqueKey>

    <defaultSearchField>id</defaultSearchField>

    <types>
        <fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>

        <fieldType name="tdate" class="solr.TrieDateField" omitNorms="true" precisionStep="6" positionIncrementGap="0"/>

        <fieldType name="timeInterval" class="at.researchstudio.sat.solrintervals.TimeIntervalType" subFieldSuffix="_interval"/>

        <fieldType name="tlong" class="solr.TrieLongField" precisionStep="8" omitNorms="true" positionIncrementGap="0"/>

    </types>

    <fields>
        <field name="id" type="string" indexed="true" stored="true" required="true" />

        <field name="title" type="string" indexed="true" stored="true" required="false" multiValued="false"/>

        <field name="timeInterval" type="timeInterval" indexed="true" stored="true" required="false" multiValued="false"/>
        <dynamicField name="*_interval"  type="tlong" indexed="true"  stored="false" multiValued="false"/>

    </fields>

</schema>
