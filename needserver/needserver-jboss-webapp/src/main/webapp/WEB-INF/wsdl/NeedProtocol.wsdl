<wsdl:definitions xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                  xmlns:wonnp="http://webofneeds.org/needProtocol"
                  xmlns:wsdlsoap="http://schemas.xmlsoap.org/wsdl/soap/" xmlns="http://schemas.xmlsoap.org/wsdl/"
                  targetNamespace="http://webofneeds.org/needProtocol">

    <wsdl:message name="connectRequest">

        <wsdl:part name="remoteNeedUri" type="xsd:string"/>

        <wsdl:part name="remoteNeedProtocolEndpointUri" type="xsd:string"/>

    </wsdl:message>

    <wsdl:message name="connectResponse">

        <wsdl:part name="connectResponse" type="xsd:boolean"/>

    </wsdl:message>

    <wsdl:portType name="NeedProtocolWS">

        <wsdl:operation name="connect" parameterOrder="remoteNeedUri remoteNeedProtocolEndpointUri">

            <wsdl:input name="connectRequest" message="wonnp:connectRequest"/>

            <wsdl:output name="connectResponse" message="wonnp:connectResponse"/>

        </wsdl:operation>

    </wsdl:portType>

    <wsdl:binding name="NeedProtocolServiceSoapBinding" type="wonnp:NeedProtocolWS">

        <wsdlsoap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>

        <wsdl:operation name="connect">

            <wsdlsoap:operation soapAction=""/>

            <wsdl:input name="connectRequest">

                <wsdlsoap:body use="literal" namespace="http://webofneeds.org/needProtocol"/>

            </wsdl:input>

            <wsdl:output name="connectResponse">

                <wsdlsoap:body use="literal" namespace="http://webofneeds.org/needProtocol"/>

            </wsdl:output>

        </wsdl:operation>

    </wsdl:binding>

    <wsdl:service name="NeedProtocolWSClientService">

        <wsdl:port name="NeedProtocolWSImpl" binding="wonnp:NeedProtocolServiceSoapBinding">

            <wsdlsoap:address location="http://localhost:8080/needserver-webapp/needProtocol"/>

        </wsdl:port>

    </wsdl:service>

</wsdl:definitions>
